{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2017"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "baseUrl": "src",
    "paths": {
      "~types/*": ["types/*"],
      "~components/*": ["components/*"],
      "~utils/*": ["utils/*"],
      "~assets/*": ["assets/*"]
    }
  },
  "include": ["./src/**/*"]
}
